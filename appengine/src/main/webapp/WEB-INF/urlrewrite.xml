<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 2.6//EN" "http://www.tuckey.org/res/dtds/urlrewrite2.6.dtd">
<urlrewrite>

	<!-- allow api paths for a few domains -->
	<rule>
		<condition name="host" operator="notequal">^cypherpunk.com$</condition>
		<set type="response-header" name="Strict-Transport-Security">max-age=10886400; includeSubDomains; preload</set>
		<set type="response-header" name="Access-Control-Allow-Origin">https://cypherpunk.com</set>
		<set type="response-header" name="Access-Control-Allow-Methods">GET, POST</set>
		<set type="response-header" name="Access-Control-Allow-Credentials">true</set>
		<set type="response-header" name="Access-Control-Max-Age">0</set>
		<from>^/api/v[0-2]/.*</from>
		<to last="true">-</to>
	</rule>
	<rule>
		<condition name="host" operator="notequal">^cypherpunk.engineering$</condition>
		<set type="response-header" name="Access-Control-Allow-Origin">https://cypherpunk.engineering</set>
		<set type="response-header" name="Access-Control-Allow-Methods">GET, POST</set>
		<set type="response-header" name="Access-Control-Allow-Credentials">true</set>
		<set type="response-header" name="Access-Control-Max-Age">0</set>
		<from>^/api/v[0-2]/.*</from>
		<to last="true">-</to>
	</rule>
	<rule>
		<condition name="host" operator="notequal">^cypherpunk.privacy.network$</condition>
		<set type="response-header" name="Strict-Transport-Security">max-age=10886400; includeSubDomains; preload</set>
		<from>^/api/v[0-2]/.*</from>
		<to last="true">-</to>
	</rule>

	<!-- redirect typo domains to main domain -->
	<rule>
		<condition name="host" operator="notequal" next="and">^cypherpunk.com$</condition>
		<condition name="host" operator="notequal" next="and">^cypherpunk.engineering$</condition>
		<condition name="host" operator="notequal">^localhost:8080$</condition>
		<from>/(.*)</from>
		<to last="true" type="permanent-redirect">https://cypherpunk.com/$1</to>
	</rule>

	<!-- set HSTS header for all requests to cypherpunk.com -->
	<rule>
		<condition name="host">^cypherpunk.com$</condition>
		<set type="response-header" name="Strict-Transport-Security">max-age=10886400; includeSubDomains; preload</set>
	</rule>

	<!-- default cache-control and expiration -->
	<rule>
		<set type="response-header" name="Cache-Control">public, max-age=43200</set>
		<set type="expires">12 hours</set>
	</rule>

    <!-- set short cache times for things that change often -->
	<rule>
		<from>^[^\.]*$</from><!-- any URL without a dot, should match / and /features and /account/profile etc. -->
		<set type="response-header" name="Cache-Control">public, max-age=3600</set>
		<set type="expires">1 hour</set>
	</rule>

    <!-- set medium cache times for things that change sometimes -->
	<rule>
		<from>\.(html|txt|json|rss|xml)$</from><!-- request URL ends in these extensions -->
		<set type="response-header" name="Cache-Control">public, max-age=3600</set>
		<set type="expires">1 hour</set>
	</rule>
	<rule>
		<from>\.(jpg|jpeg|png|ico)$</from><!-- request URL ends in these extensions -->
		<set type="response-header" name="Cache-Control">public, max-age=86400</set>
		<set type="expires">1 day</set>
	</rule>

    <!-- set very long cache times for things that cache-busted assets -->
	<rule>
		<from>\.(js|css)$</from><!-- request URL ends in these extensions -->
		<set type="response-header" name="Cache-Control">public, max-age=2592000</set>
		<set type="expires">30 days</set>
	</rule>

	<!-- rewrite appengine paths exactly as requested -->
	<rule>
		<from>^/_ah/(.*)</from>
		<to last="true">/_ah/$1</to>
	</rule>

	<!-- spider crawler robots -->
	<rule>
		<method>GET</method>
		<condition name="user-agent">(bot|spider|snippet|pinterest|crawler|archiver|flipboardproxy|mediapartners|facebookexternalhit|quora|disqus)</condition>
		<from>/.*</from>
		<set type="status">404</set>
		<to last="true">null</to>
	</rule>

	<!-- publicly accessible routes, for itunes app review guys -->
	<rule>
		<from>^/privacy-policy(.*)</from>
		<to last="true">/privacy-policy.html$1</to>
	</rule>
	<rule>
		<from>^/terms-of-service(.*)</from>
		<to last="true">/terms-of-service.html$1</to>
	</rule>
	<rule>
		<from>^/confirm(.*)</from>
		<to last="true">/confirm.html$1</to>
	</rule>

