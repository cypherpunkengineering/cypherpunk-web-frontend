		<to last="true">/404.html$1</to>
	</rule>

	<!-- public root -->
	<rule>
		<from>^/$</from>
		<to last="true">/cypherpunk-public.html</to>
	</rule>

	<!-- catchall handler -->
	<rule>
		<from>^/.*</from>
		<set type="status">404</set>
		<to last="true">404.html</to>
	</rule>

</urlrewrite>
